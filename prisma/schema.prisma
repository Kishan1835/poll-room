generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Poll {
  id        String   @id @default(cuid())
  question  String
  options   String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  votes     Vote[]
}

model Vote {
  id          String   @id @default(cuid())
  pollId      String?
  optionIndex Int
  fingerprint String // Browser Refrence
  ipAddress   String? // This will for(ip address additional verification)
  userAgent   String?
  createdAt   DateTime @default(now())

  poll Poll? @relation(fields: [pollId], references: [id], onDelete: Cascade)

  @@index([pollId])
  @@index([fingerprint, pollId])
  @@index([ipAddress, pollId])
}
